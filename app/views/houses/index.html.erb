<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <tr>
    <th>Location </th>
    <th>Square_footage </th>
    <th>Year_built </th>
    <th>Style </th>
    <th>List_price </th>
    <th>Floors </th>
    <th>Basement </th>
    <th>Current_house_owner </th>
    <th>Contact_information_for_listing_realtor </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tbody>
    <% if !@houses.nil? then @houses.each do |house| %>
      <tr>
        <td><%= house.location %></td>
        <td><%= house.square_footage %></td>
        <td><%= house.year_built %></td>
        <td><%= house.style %></td>
        <td><%= house.list_price %></td>
        <td><%= house.floors %></td>
        <td><%= house.basement %></td>
        <td><%= house.current_house_owner %></td>
        <td><%= house.contact_information_for_listing_realtor %></td>
        <td><%= link_to 'Show', house %></td>
        <%if current_user.role !="househunter" %>
          <% if current_admin or (current_user.role=="realtor" and house.contact_information_for_listing_realtor == current_user.id) %>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
          </tr>
  <% end %>
    <% end %>
  </tbody>
</table>

<br>

